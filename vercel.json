{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "PORT": "8080"
  },
  "functions": {
    "app.py": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "buildCommand": "pip install -r requirements.txt"
}
